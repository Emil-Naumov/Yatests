<Window x:Class="Yatests.FolderWindow.AdminWindowFolder.QuestionFolder.AnswerFolder.AddAnswerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yatests.FolderWindow.AdminWindowFolder.QuestionFolder.AnswerFolder"
        mc:Ignorable="d"
        Title="Добавление ответа" 
        Height="614" 
        Width="401"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        BorderThickness="2.5"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"        
        AllowsTransparency="True" 
        Background="Transparent"
        >
    <Border Width="Auto" Height="Auto"
          BorderThickness="2"
          CornerRadius="10" BorderBrush="Black">
        <Border.Background>
            <ImageBrush ImageSource="/Yatests;component/FolderResource/FolderImage/Background.jpg" Stretch="UniformToFill"/>
        </Border.Background>
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="55"/>
                <RowDefinition/>
                <RowDefinition Height="59"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="88"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="59"/>
                <RowDefinition Height="24"/>
                <RowDefinition Height="36"/>
                <RowDefinition Height="31"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="37"/>
                <RowDefinition Height="0"/>
            </Grid.RowDefinitions>

            <ComboBox x:Name="CbTrueOfFalse"
                  Grid.Row="6" Margin="10,0"
                  Height="auto" Width="auto"
                  SelectedValuePath="IdIsTrueOrFalse"
                  DisplayMemberPath="IsTrueOrFalseStatus" 
                  VerticalContentAlignment="Center"
                  FontSize="16" 
                  FontWeight="Bold" SelectionChanged="CbTrueOfFalse_SelectionChanged">
                <ComboBox.BorderBrush>
                    <SolidColorBrush Color="White" Opacity="0.5"/>
                </ComboBox.BorderBrush>
            </ComboBox>

            <Image Grid.Row="1"
               Margin="35,15,15,15"
                   MouseLeftButtonDown="Logo"/>
            <TextBlock x:Name="T1" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Style="{DynamicResource T2}"
                   Grid.Row="2"
                   Text="Введите номер ответа"/>
            <TextBlock x:Name="T2" HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Style="{DynamicResource T2}"
                   Grid.Row="4"
                   Text="Ответ"/>
            <TextBlock x:Name="T3" HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Style="{DynamicResource T2}"
                   Grid.Row="6"
                   Text="Правдивость">
                <TextBlock.Foreground>
                    <SolidColorBrush Color="Black" Opacity="0.5"/>
                </TextBlock.Foreground>
            </TextBlock>
            <TextBox x:Name="TbNumberAnswer"
                 Grid.Row="2"
                 VerticalContentAlignment="Center"
                 Style="{DynamicResource TextBoxStyle}"
                 Width="Auto" Margin="10,0" KeyDown="TbNumberAnswer_KeyDown">
                <TextBox.Background>
                    <SolidColorBrush Color="#FFF3F3F3" Opacity="0.5"/>
                </TextBox.Background>
            </TextBox>

            <TextBox x:Name="TbContentAnswer" Grid.Row="4"
                 Style="{DynamicResource TextBoxStyle}" 
                 HorizontalContentAlignment="Left"
                 VerticalContentAlignment="Center"
                 Padding="10"
                 TextWrapping="Wrap" Margin="10,0" KeyDown="TbContentAnswer_KeyDown">
                <TextBox.Background>
                    <SolidColorBrush Color="#FFF3F3F3" Opacity="0.5"/>
                </TextBox.Background>
            </TextBox>

            <Image  x:Name="BTEnt"
                Source="/FolderResource/FolderImage/SAVE.png"
                MouseLeftButtonDown="Enter"
                Grid.Row="8" Cursor="Hand"/>
            <Image  x:Name="BTX"
                HorizontalAlignment="Right"
                Source="/FolderResource/FolderImage/X.png"
                MouseLeftButtonDown="X"
                Height="13"
                Width="13" Margin="0,10,10,32" Cursor="Hand"/>
            <Image  x:Name="BTBack"
                Source="/FolderResource/FolderImage/Back.png"
                MouseLeftButtonDown="Back"
                Grid.Row="10" Cursor="Hand"/>
        </Grid>
    </Border>
</Window>
