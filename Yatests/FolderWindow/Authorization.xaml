<Window x:Class="Yatests.WindowsFolder.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yatests.WindowsFolder"
        mc:Ignorable="d"
        Title="Авторизация" 
        Height="582" 
        Width="401" 
        WindowStyle="None" 
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        AllowsTransparency="True" 
        Background="Transparent"
        >
    <Border Width="Auto" Height="Auto"
          BorderThickness="2"
          CornerRadius="10" BorderBrush="Black">
        <Border.Background>
            <ImageBrush ImageSource="/Yatests;component/FolderResource/FolderImage/Background.jpg" Stretch="UniformToFill"/>
        </Border.Background>
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="160"/>
            <RowDefinition/>
            <RowDefinition Height="9"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="27"/>
            <RowDefinition Height="54"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="54"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="31"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="52"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="T1" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Style="{DynamicResource T2}"
                   Grid.Row="5"
                   Text="Введите логин"/>
        <TextBlock x:Name="T2" HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Style="{DynamicResource T2}"
                   Grid.Row="7"
                   Text="Введите пароль"/>
            <Image Margin="0,27,0,0" MouseLeftButtonDown="Logo"/>
        <Label Content="Вход в систему"
               HorizontalAlignment="Center"
               Style="{DynamicResource LabelStyle}"
               Grid.Row="3"/>
        <TextBox x:Name="LoginTb"
                 Grid.Row="5"
                 Style="{DynamicResource TextBoxStyle}" Margin="34,0" KeyDown="LoginTb_KeyDown"
                 >
            <TextBox.Background>
                <SolidColorBrush Color="#FFF3F3F3" Opacity="0.5"/>
            </TextBox.Background>
        </TextBox>
        <PasswordBox x:Name="PasswordPb"
                     Grid.Row="7"
                     Style="{DynamicResource PasswordBoxStyle}" Margin="34,0" KeyDown="PasswordPb_KeyDown">
            <PasswordBox.Background>
                <SolidColorBrush Color="White" Opacity="0.5"/>
            </PasswordBox.Background>
        </PasswordBox>
        <Image  x:Name="BTEnt"
                Source="/FolderResource/FolderImage/Enter.png"
                MouseLeftButtonDown="Enter"
                Grid.Row="9" Cursor="Hand"/>
        <Image  x:Name="BTAdd"
                Source="/FolderResource/FolderImage/AddAccount.png"
                MouseLeftButtonDown="AddAccount"
                Grid.Row="11" Cursor="Hand"/>
        <StackPanel Orientation="Horizontal"
                    Grid.Row="7"
                    HorizontalAlignment="Center" Margin="200,37,201,0" Grid.RowSpan="3" Width="0"/>
        <Label Content="Добро пожаловать!"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Style="{DynamicResource LabelLogoStyle}" 
            Margin="0,20,0,0" Height="39" Width="401" Grid.Row="1"/>
        <Image  x:Name="BTClose"
                HorizontalAlignment="Right"
                Source="/FolderResource/FolderImage/X.png"
                MouseLeftButtonDown="CloseWindow"
                Height="13"
                Width="13" Margin="0,10,10,137" Cursor="Hand"/>
        </Grid>
    </Border>
</Window>
