<Window x:Class="Yatests.FolderWindow.MBFolder.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yatests.FolderWindow.MBFolder"
        mc:Ignorable="d"
        Title="Информация" 
        Height="171" 
        Width="455" 
        ResizeMode="NoResize" 
        WindowStyle="None" 
        WindowStartupLocation="CenterScreen"
        MouseLeftButtonDown="Window_MouseLeftButtonDown" 
        Topmost="True"        
        Background="Transparent"
        AllowsTransparency="True">
    <Border Width="Auto" Height="Auto"
          BorderThickness="2"
          CornerRadius="10">
        <Border.Background>
            <ImageBrush ImageSource="/Yatests;component/FolderResource/FolderImage/Background.jpg" Stretch="None"/>
        </Border.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="36*"/>
            <RowDefinition Height="91*"/>
            <RowDefinition Height="34"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <TextBlock 
            HorizontalAlignment="Center" 
            Style="{DynamicResource T1}"
            Text="Информация" 
            VerticalAlignment="Center" Grid.Row="0" FontWeight="Bold" 
            />
        <TextBlock x:Name="InfoTb"  Margin="0,35,0,0" 
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   TextWrapping="Wrap"
                   Style="{DynamicResource T2}"
                   TextAlignment="Center" Width="455" Grid.Row="1"/>
        <Image  x:Name="BTClose"
                HorizontalAlignment="Right"
                Source="/FolderResource/FolderImage/X.png"
                MouseLeftButtonDown="CloseWindow"
                Height="13"
                Width="13" Margin="0,10,10,12" Cursor="Hand"/>
        <Image  x:Name="BTOk"
                Source="/FolderResource/FolderImage/Ok.png"
                MouseLeftButtonDown="CloseWindow"
                Grid.Row="2" Cursor="Hand"/>
        <Image  x:Name="BMistake"
                HorizontalAlignment="Left"
                Source="../../FolderResource/FolderImage/Information.png"
                Height="18"
                Width="18" Margin="10,10,0,7" Stretch="Fill"/>
    </Grid>
    </Border>
</Window>
