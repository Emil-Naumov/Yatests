<Page x:Class="Yatests.FolderPage.StaffPageFolder.TestListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Yatests.FolderPage.StaffPageFolder"
      mc:Ignorable="d" 
      d:DesignHeight="880" 
      d:DesignWidth="575"
      Title="Тесты">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="272*"/>
            <ColumnDefinition Width="291*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="19"/>
            <RowDefinition Height="54"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="T1"
            HorizontalAlignment="Left" 
                   Grid.Row="1"
                   Margin="10,19,0,19"
            VerticalAlignment="Center" Grid.Column="1"
            Text="Поиск" Height="16" Width="56"/>
        <TextBox x:Name="SearchTb"
                 Style="{DynamicResource TextBoxStyle}" 
                 Padding="10"
                 Height="Auto"
                 Margin="270,4,63,5"
                 TextChanged="SearchTb_TextChanged" BorderBrush="Black" KeyDown="SearchTb_KeyDown" Grid.Row="1" Grid.ColumnSpan="2">
            <TextBox.Background>
                <SolidColorBrush Color="White" Opacity="0.5"/>
            </TextBox.Background>
        </TextBox>
        <ListView x:Name="LvTest"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  Margin="10,5,6,0"
                  Grid.Row="2" Background="{x:Null}" BorderBrush="{x:Null}" Grid.ColumnSpan="2">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Height="Auto"
              Width="510" 
              Grid.Column="0"
              Grid.ColumnSpan="2"
              Margin="0,1,0,1"
              Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="9*"/>
                            <ColumnDefinition Width="161*"/>
                            <ColumnDefinition Width="170*"/>
                            <ColumnDefinition Width="170*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="5"/>
                        </Grid.RowDefinitions>
                        <Border Width="520" Grid.Row="0" Grid.RowSpan="4" 
                    Grid.Column="0" 
                    Grid.ColumnSpan="4" 
                    Height="Auto" 
          BorderThickness="2" Margin="0,5,-10,5"
          CornerRadius="10">
                            <Border.Background>
                                <SolidColorBrush Color="#F3F3F3" Opacity="0.7"/>
                            </Border.Background>
                        </Border>
                        <StackPanel Orientation="Horizontal"
                       Grid.Row="0"
                       Grid.ColumnSpan="4"
                        Margin="0,10,0,0"
                        Grid.Column="1"
                       >
                            <Label Content="{Binding NameTest}"
                                   Style="{DynamicResource LabelLogoStyle}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                        Grid.Row="1"
                        Grid.ColumnSpan="3"
                        Grid.Column="1">
                            <Label Content="Описание:"
                                   HorizontalContentAlignment="Left"
                                   Style="{DynamicResource LabelStyle}"/>
                            <Label Content="{Binding TestDescription}"
                                   Style="{DynamicResource LabelStyle}"/>
                        </StackPanel>
                        <Button x:Name="ChoiceBtn"
                                Cursor="Hand"
                    ToolTip="{Binding IdTestMain}"
                    Content="Пройти"
                    Grid.Column="3"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Left"
                    Style="{DynamicResource MainButtonStyle}"
                    Click="ChoiceBtn_Click" 
                    Margin="0,0,0,7" 
                    Grid.Row="2" 
                    Width="170"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
        </ListView>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Grid.Row="3" Margin="194,0" Width="187" Grid.ColumnSpan="2">
            <Button x:Name="PreviousPageBtn"
                    Height="Auto"
                    Width="Auto"
                    Click="PreviousPageBtn_Click"
                    Style="{DynamicResource AlternativeButton}">
                <Image Source="/FolderResource/FolderImage/Not.png"
                           Height="40"
                           Width="40"/>
            </Button>
            <Label Content="n/n"
                   x:Name="lblNumber"
                   FontSize="24"
                   Style="{DynamicResource LabelStyle}"/>
            <Button x:Name="NextPageBtn"
                    Width="Auto"
                    Height="Auto"
                    Click="NextPageBtn_Click"
                    Style="{DynamicResource AlternativeButton}" Cursor="Hand">
                <Image Source="/FolderResource/FolderImage/Next.png"
                           Height="40"
                           Width="40"/>

            </Button>
        </StackPanel>
    </Grid>
</Page>
