<Page x:Class="Yatests.FolderPage.AdminPageFolder.ListStaffPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Yatests.FolderPage.AdminPageFolder"
      mc:Ignorable="d" 
      d:DesignHeight="880" 
      d:DesignWidth="575"
      Title="Сотрудники">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="272*"/>
            <ColumnDefinition Width="286*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="19"/>
            <RowDefinition Height="54"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="T1"
                   HorizontalAlignment="Left" 
                   Grid.Row="1"
                   Grid.Column="1"
                   VerticalAlignment="Center"
                   Text="Поиск" 
                   Height="16" 
                   Width="56"
                   Margin="10,19,0,19"
                   />
        <TextBox x:Name="TbSearch"
                 Style="{DynamicResource TextBoxStyle}" Height="Auto"
                 Margin="270,4,62,5"
                 Padding="10"
                 TextChanged="TbSearch_TextChanged" 
                 BorderBrush="Black" KeyDown="TbSearch_KeyDown" 
                 Grid.Row="1" 
                 Grid.ColumnSpan="2" 
                 CaretBrush="Black">
            <TextBox.Background>
                <SolidColorBrush Color="White" Opacity="0.5"/>
            </TextBox.Background>
        </TextBox>
        <DataGrid Grid.Row="2" Background="{x:Null}"
                  Style="{DynamicResource DataGridStyle}"
                  Margin="10,5,6,0"
                  x:Name="DgListStaff" BorderBrush="{x:Null}" Grid.ColumnSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="№"
                                    Binding="{Binding IdStaff}"
                                    Width="40"/>
                <DataGridTextColumn Header="ФИО" 
                                    Width="*">
                    <DataGridTextColumn.Binding>
                        <MultiBinding StringFormat=" {0} {1} {2}">
                            <Binding Path="Surname"/>
                            <Binding Path="Name"/>
                            <Binding Path="Patronymic"/>
                        </MultiBinding>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
                <DataGridTemplateColumn Header="Действие"
                                        Width="auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Удалить" Cursor="Hand" x:Name="BtnRemove"
                                    Style="{DynamicResource MainButtonStyle}"
                                    Click="BtnRemove_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
