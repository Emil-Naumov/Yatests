<Page x:Class="Yatests.FolderPage.AdminPageFolder.ResultsPageFolder.ResultsStaffPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Yatests.FolderPage.AdminPageFolder.ResultsPageFolder"
      mc:Ignorable="d" 
      d:DesignHeight="880" d:DesignWidth="575"
      Title="Результаты">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="281*"/>
            <ColumnDefinition Width="294*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="19"/>
            <RowDefinition Height="54"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="T1"
                   HorizontalAlignment="Left" 
                   Grid.Row="1"
                   VerticalAlignment="Center" 
                   Grid.Column="1"
                   Text="Поиск" 
                   Height="16" 
                   Width="56" 
                   Margin="10,19,0,19"/>

        <TextBox x:Name="TbSearch"
                 Style="{DynamicResource TextBoxStyle}" Height="Auto"
                 Margin="270,4,61,5"
                 TextChanged="TbSearch_TextChanged" 
                 BorderBrush="Black" 
                 KeyDown="TbSearch_KeyDown" 
                 Padding="10"
                 Grid.Row="1" 
                 Grid.ColumnSpan="2" CaretBrush="Black">
            <TextBox.Background>
                <SolidColorBrush Color="White" Opacity="0.5"/>
            </TextBox.Background>
        </TextBox>

        <ListView x:Name="LvResultStaff"
                  Grid.Row="2"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                  Background="{x:Null}" Margin="10,5,6,0" Grid.ColumnSpan="2" BorderBrush="{x:Null}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Height="Auto"
              Width="Auto"
              Grid.ColumnSpan="2" 
                          Grid.Row="2" 
                          Margin="0,5,5,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="13*"/>
                            <ColumnDefinition Width="268*"/>
                            <ColumnDefinition Width="294*"/>
                            <ColumnDefinition Width="305*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="7"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto" MinHeight="30"/>
                            <RowDefinition Height="25.667"/>
                            <RowDefinition Height="28"/>
                            <RowDefinition Height="11"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Border Width="510" Grid.Row="0" Grid.RowSpan="6" 
                    Grid.Column="0" 
                    Grid.ColumnSpan="4" 
                    Height="Auto"
          BorderThickness="2" Margin="0,5,0,5"
          CornerRadius="10">
                            <Border.Background>
                                <SolidColorBrush Color="#F3F3F3" Opacity="0.7"/>
                            </Border.Background>
                        </Border>
                        <StackPanel Orientation="Horizontal"
                        Grid.Row="1"
                        Grid.Column="1"
                        Grid.ColumnSpan="3"
                        Margin="0,10,0,0"
                        >
                            <Label Content="ФИО:"
                       Style="{DynamicResource LabelStyle}"/>
                            <Label 
                       Content="{Binding Staff.Surname}"
                       Style="{DynamicResource LabelStyle}"/>
                            <Label 
                       Content="{Binding Staff.Name}"
                       Style="{DynamicResource LabelStyle}"/>
                            <Label 
                       Content="{Binding Staff.Patronymic}"
                       Style="{DynamicResource LabelStyle}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                        Grid.Column="1"
                                    Grid.Row="2"
                                    Grid.ColumnSpan="3">
                            <Label Content="Название теста:"
                       Style="{DynamicResource LabelStyle}"/>
                            <Label Content="{Binding TestMain.NameTest}"
                       Style="{DynamicResource LabelStyle}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    Grid.Row="3"
                        Grid.Column="1"
                                    Grid.ColumnSpan="3" >
                            <Label Content="Баллы:"
                                   HorizontalContentAlignment="Left"
                                   Style="{DynamicResource LabelStyle}"/>
                            <Label Content="{Binding Result1}"
                                   Style="{DynamicResource LabelStyle}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    Grid.Row="4"
                        Grid.Column="1"
                                    Grid.ColumnSpan="3" >
                            <Label Content="Дата прохождения:"
                                   HorizontalContentAlignment="Left"
                                   Style="{DynamicResource LabelStyle}"/>
                            <Label Content="{Binding DoP}"
                                   Style="{DynamicResource LabelStyle}"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
        </ListView>


        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                    Grid.Row="3" Margin="194,0" Width="187" Grid.ColumnSpan="2">
            <Button x:Name="PreviousPageBtn"
                    Cursor="Hand"
                    Height="Auto"
                    Width="Auto"
                    Click="PreviousPageBtn_Click"
                    Style="{DynamicResource AlternativeButton}">
                <Image Source="/FolderResource/FolderImage/Not.png"
                           Height="40"
                           Width="40"/>
            </Button>
            <Label Content="n/n"
                   x:Name="lblNumber"
                   FontSize="24"
                   Style="{DynamicResource LabelStyle}"/>
            <Button x:Name="NextPageBtn"
                    Width="Auto" Cursor="Hand"
                    Height="Auto"
                    Click="NextPageBtn_Click"
                    Style="{DynamicResource AlternativeButton}">
                <Image Source="/FolderResource/FolderImage/Next.png"
                           Height="40"
                           Width="40"/>
            </Button>
        </StackPanel>

    </Grid>
</Page>
