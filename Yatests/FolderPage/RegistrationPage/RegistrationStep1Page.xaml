<Page x:Class="Yatests.FolderPage.RegistrationPage.RegistrationStep1Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Yatests.FolderPage.RegistrationPage"
      mc:Ignorable="d" 
      d:DesignHeight="559" d:DesignWidth="401"
      Title="Регистрация. Шаг 1">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="160"/>
            <RowDefinition/>
            <RowDefinition Height="9"/>
            <RowDefinition Height="54"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="54"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="54"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="31"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        
        <TextBlock x:Name="T1" HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Style="{DynamicResource T2}"
                   Grid.Row="3"
                   Text="Введите фамилию"/>
        
        <TextBlock x:Name="T2" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Style="{DynamicResource T2}"
                   Grid.Row="5"
                   Text="Введите имя"/>
        
        <TextBlock x:Name="T3" HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Style="{DynamicResource T2}"
                   Grid.Row="7"
                   Text="Введите отчество (необязательно)"/>
        
        <Image Margin="0,27,0,0"
               MouseLeftButtonDown="Logo"/>
        <Label Content="Кто вы?"
               HorizontalAlignment="Center"
               Style="{DynamicResource LabelStyle}"
               Grid.Row="1"/>
        <TextBox x:Name="SurnameTb"
                 Grid.Row="3"
                 Style="{DynamicResource TextBoxStyle}" 
                 Margin="34,0" 
                 KeyDown="SurnameTb_KeyDown">
            <TextBox.Background>
                <SolidColorBrush Color="#FFF3F3F3" 
                                 Opacity="0.5"/>
            </TextBox.Background>
        </TextBox>
        <TextBox x:Name="NameTb"
                 Grid.Row="5"
                 Style="{DynamicResource TextBoxStyle}" 
                 Margin="34,0" 
                 KeyDown="NameTb_KeyDown">
            <TextBox.Background>
                <SolidColorBrush Color="#FFF3F3F3" 
                                 Opacity="0.5"/>
            </TextBox.Background>
        </TextBox>
        <TextBox x:Name="PatronymicTb"
                 Grid.Row="7"
                 Style="{DynamicResource TextBoxStyle}" 
                 Margin="34,0" 
                 KeyDown="PatronymicTb_KeyDown">
            <TextBox.Background>
                <SolidColorBrush Color="#FFF3F3F3" 
                                 Opacity="0.5"/>
            </TextBox.Background>
        </TextBox>
        <Image  x:Name="BTEnt"
                Source="/FolderResource/FolderImage/Further.png"
                MouseLeftButtonDown="Enter"
                Grid.Row="9" Cursor="Hand"/>
        <Image  x:Name="BTBack"
                Source="/FolderResource/FolderImage/Back.png"
                MouseLeftButtonDown="Back"
                Grid.Row="11" Cursor="Hand"/>
        <StackPanel Orientation="Horizontal"
                    Grid.Row="7"
                    HorizontalAlignment="Center" Margin="200,37,201,0" Grid.RowSpan="3" Width="0"/>
    </Grid>
</Page>
