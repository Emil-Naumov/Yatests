<Page x:Class="Yatests.FolderPage.QuestionFolder.ListAnswerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Yatests.FolderPage.QuestionFolder"
      mc:Ignorable="d" 
      d:DesignHeight="880" 
      d:DesignWidth="575"
      Title="Тесты">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="T1"
                   HorizontalAlignment="Center"
                   Grid.Row="2" 
                   VerticalAlignment="Center"
                   Margin="201,20,176,10" Width="198" Height="26"><Run Text="    "/><Run Text="Введите свой ответ"/></TextBlock>

        <Border
                Height="auto" Width="500"
                BorderThickness="1" CornerRadius="5"
                HorizontalAlignment="Left" Margin="10,0,0,0">
            <Border.Background>
                <SolidColorBrush Color="#FFF3F3F3" Opacity="0.5"/>
            </Border.Background>
            <TextBlock x:Name="TbContentQuestin"
                       Width="auto" Background="{x:Null}"
                       TextWrapping="Wrap"
                       Margin="10"
                       Style="{DynamicResource T1}"
                       Text=""/>
        </Border>

        <ListView x:Name="LvTest"
                  Grid.Row="1" Margin="10"
                  ScrollViewer.VerticalScrollBarVisibility="Disabled"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                  Background="{x:Null}" 
                  BorderBrush="{x:Null}" SelectionChanged="LvTest_SelectionChanged" MouseDoubleClick="LvTest_MouseDoubleClick">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="{x:Null}"
                            Height="auto" Width="500"
                            BorderThickness="1" CornerRadius="5">
                        <Border.Background>
                            <SolidColorBrush Color="#EFCD61" Opacity="0.5"/>
                        </Border.Background>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        Margin="10">
                                <Label Content="Вариант ответа:" Padding="0"
                                       Margin="0"
                                       Style="{DynamicResource LabelStyle}"/>
                                <Label Content="{Binding NumberAnswer}"
                                       Padding="0" Margin="0"
                                       Style="{DynamicResource LabelStyle}"/>
                            </StackPanel>
                            <TextBlock x:Name="TbContentQuestin"
                                     Width="auto" Background="{x:Null}"
                                     TextWrapping="Wrap"
                                     Margin="10" Padding="0"
                                     Style="{DynamicResource T2}"
                                     Text="{Binding ContentAnswer}"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal" >
            <Button x:Name="BtnNext"
                Content="Ответить"
                Style="{DynamicResource MainButtonStyle}"
                    Click="BtnNext_Click" Width="100" Cursor="Hand"/>
            <TextBox x:Name="TbListOfAnswer"
                     Width="238" MinWidth="300" MaxWidth="500" Background="{x:Null}"
                     Style="{DynamicResource TextBoxStyle}" Cursor="Arrow" KeyDown="TbListOfAnswer_KeyDown"/>

            <Button x:Name="SkipBtn"
                    Content="Пропустить"
                    Style="{DynamicResource MainButtonStyle}"
                    Click="SkipBtn_Click" Width="107" Cursor="Hand"/>

        </StackPanel>
    </Grid>
</Page>
